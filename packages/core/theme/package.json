{
  "name": "@veroui/theme",
  "version": "0.0.1",
  "description": "VeroUI theme system and design tokens",
  "keywords": [
    "theme",
    "theming",
    "design",
    "ui",
    "components",
    "classNames",
    "css"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "author": "VeroUI <support@veroui.com>",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit"
  },
  "license": "MIT",
  "peerDependencies": {
    "tailwindcss": ">=4.0.0"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "color": "^4.2.3",
    "color2k": "^2.0.3",
    "deepmerge": "4.3.1",
    "flat": "^5.0.2",
    "tailwind-merge": "3.3.1",
    "tailwind-variants": "3.1.1"
  },
  "devDependencies": {
    "@types/color": "^4.2.0",
    "@types/flat": "^5.0.2",
    "clean-package": "2.2.0",
    "tailwindcss": "4.1.11",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
