{
    "name": "@veroui/system",
    "version": "0.0.1",
    "description": "VeroUI system primitives for Vue",
    "keywords": [
        "system",
        "veroui",
        "vue"
    ],
    "license": "MIT",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "clean": "rimraf dist .turbo",
        "type-check": "vue-tsc --noEmit"
    },
    "peerDependencies": {
        "tailwindcss": ">=3.4.0",
        "vue": "^3.4.0"
    },
    "dependencies": {
        "@veroui/theme": "workspace:*",
        "clsx": "^2.1.0",
        "color2k": "^2.0.3",
        "tailwind-merge": "^2.5.0",
        "tailwind-variants": "^0.2.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "rimraf": "^5.0.0",
        "tailwindcss": "^3.4.0",
        "tsup": "^8.5.0",
        "typescript": "^5.3.0",
        "unplugin-vue": "^7.0.2",
        "vue": "^3.4.0",
        "vue-tsc": "^2.0.0"
    },
    "tsup": {
        "clean": true,
        "target": "es2019",
        "format": [
            "cjs",
            "esm"
        ],
        "entry": [
            "src/index.ts"
        ],
        "dts": true,
        "external": [
            "vue"
        ]
    }
}
